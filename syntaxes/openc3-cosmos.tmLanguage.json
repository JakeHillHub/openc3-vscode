{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "OpenC3 Cosmos",
  "scopeName": "source.openc3-cosmos",
  "fileTypes": [".txt"],
  "patterns": [
    {
      "begin": "<%=?",
      "end": "%>",
      "name": "source.ruby.embedded.erb",
      "contentName": "source.ruby",
      "patterns": [
        {
          "include": "source.ruby"
        }
      ]
    },
    {
      "name": "keyword.control.openc3-cosmos",
      "match": "\\b(COMMAND|TELEMETRY|TARGET|INTERFACE|VARIABLE)\\b"
    },
    {
      "name": "entity.name.function.openc3-cosmos",
      "match": "\\b(APPEND_)?(ID_)?(ARRAY_)?PARAMETER\\b"
    },
    {
      "name": "entity.name.type",
      "match": "\\b(U?INT|FLOAT|BLOCK|STRING|DERIVED)\\b"
    },
    {
      "name": "constant.character",
      "match": "\\b(?:BIG_ENDIAN|LITTLE_ENDIAN|(?:MAX|MIN)_(?:U?INT|FLOAT)(?:8|16|32|64|128))\\b"
    },
    {
      "name": "constant.numeric.openc3-cosmos",
      "match": "\\b[0-9]+(?:\\.[0-9]+)?\\b"
    },
    {
      "name": "string.quoted.double.openc3-cosmos",
      "match": "\"[^\"]*\""
    },
    {
      "name": "comment.line.number-sign.openc3-cosmos",
      "match": "#.*"
    },
    {
      "name": "variable.name.openc3-cosmos",
      "match": "\\S"
    }
  ]
}
