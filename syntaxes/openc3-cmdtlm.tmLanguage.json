{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "OpenC3 Cosmos",
  "scopeName": "source.openc3-cmdtlm",
  "fileTypes": [".txt"],
  "patterns": [
    {
      "name": "source.ruby.embedded.erb.target-name.openc3-cmdtlm",
      "match": "(<%=\\s*)(target_name)(\\s*%>)",
      "captures": {
        "1": {
          "name": "keyword.control.openc3-cmdtlm"
        },
        "2": {
          "name": "markup.italic.openc3-cmdtlm"
        },
        "3": {
          "name": "keyword.control.openc3-cmdtlm"
        }
      }
    },
    {
      "begin": "<%=?(?:(target_name)|.*?)",
      "end": "%>",
      "name": "source.ruby.embedded.erb",
      "contentName": "source.ruby",
      "beginCaptures": {
        "0": {
          "name": "keyword.control.openc3-cmdtlm"
        }
      },
      "endCaptures": {
        "0": {
          "name": "keyword.control.openc3-cmdtlm"
        }
      },
      "patterns": [
        {
          "include": "source.ruby"
        }
      ]
    },
    {
      "name": "keyword.control.openc3-cmdtlm",
      "match": "\\b(TELEMETRY|SELECT_TELEMETRY|LIMITS_GROUP)\\b"
    },
    {
      "name": "keyword.control.openc3-cmdtlm",
      "match": "\\b(COMMAND)\\b"
    },
    {
      "name": "entity.name.function.openc3-cmdtlm",
      "match": "\\b(APPEND_)?(ID_)?(ARRAY_)?PARAMETER\\b"
    },
    {
      "name": "entity.name.function.openc3-cmdtlm",
      "match": "\\b(APPEND_)?(ID_)?(ARRAY_)?ITEM\\b"
    },
    {
      "name": "entity.name.function.openc3-cmdtlm",
      "match": "\\b(SELECT|DELETE)_ITEM\\b"
    },
    {
      "name": "entity.name.type.openc3-cmdtlm",
      "match": "\\b(U?INT|FLOAT|BLOCK|STRING|DERIVED|(?:READ|WRITE)_CONVERSION|DISABLE_MESSAGES)\\b"
    },
    {
      "name": "entity.name.type.openc3-cmdtlm",
      "match": "\\b(STATE|LIMITS|LIMITS_GROUP_ITEM|FORMAT_STRING|UNITS|DESCRIPTION|META|OVERLAP|KEY|VARIABLE_BIT_SIZE|OBFUSCATE|REQUIRED|MINIMUM_VALUE|MAXIMUM_VALUE|DEFAULT_VALUE|WRITE_CONVERSION|POLY_WRITE_CONVERSION|SEG_POLY_WRITE_CONVERSION|OVERFLOW)\\b"
    },
    {
      "name": "entity.name.type.openc3-cmdtlm",
      "match": "\\b(PROCESSOR|ALLOW_SHORT|HIDDEN|ACCESSOR|TEMPLATE|TEMPLATE_FILE|IGNORE|OVERLAP|VIRTUAL)\\b"
    },
    {
      "name": "entity.name.function.openc3-cmdtlm",
      "match": "\\b(GENERIC_WRITE_CONVERSION_START|GENERIC_WRITE_CONVERSION_END)\\b"
    },
    {
      "name": "entity.name.function.openc3-cmdtlm",
      "match": "\\b(GENERIC_READ_CONVERSION_START|GENERIC_READ_CONVERSION_END)\\b"
    },
    {
      "name": "constant.character.openc3-cmdtlm",
      "match": "\\b(?:BIG_ENDIAN|LITTLE_ENDIAN|nil|true|True|false|false|(?:MAX|MIN)_(?:U?INT|FLOAT)(?:8|16|32|64|128))\\b"
    },
    {
      "name": "constant.numeric.openc3-cmdtlm",
      "match": "\\b[0-9]+(?:\\.[0-9]+)?\\b"
    },
    {
      "name": "constant.numeric.openc3-cmdtlm",
      "match": "\\b0x[0-9a-fA-F]+\\b"
    },
    {
      "name": "string.quoted.double.openc3-cmdtlm",
      "match": "\"[^\"]*\""
    },

    {
      "name": "comment.line.number-sign.openc3-cmdtlm",
      "match": "#.*"
    },
    {
      "name": "variable.name.openc3-cmdtlm",
      "match": "\\S"
    }
  ]
}
