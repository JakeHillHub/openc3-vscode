{
  "name": "openc3",
  "displayName": "openc3",
  "description": "openc3 local development support, cmd/tlm, scripting, etc.",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.104.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onLanguage:python",
    "onLanguage:ruby",
    "onLanguage:txt"
  ],
  "main": "./dist/extension.js",
  "extensionDependencies": [
    "ms-python.vscode-pylance"
  ],
  "contributes": {
    "languages": [
      {
        "id": "openc3-generic",
        "aliases": [
          "OpenC3 Cosmos Generic"
        ],
        "filenames": [
          "target.txt",
          "plugin.txt",
          "tlm.txt",
          "erb-target.txt",
          "erb-cmd.txt",
          "erb-tlm.txt",
          "erb-plugin.txt"
        ],
        "configuration": "./syntaxes/openc3-language-configuration.json"
      },
      {
        "id": "openc3-cmd",
        "aliases": [
          "OpenC3 Commands"
        ],
        "filenames": [
          "cmd.txt"
        ],
        "configuration": "./syntaxes/openc3-language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "openc3-generic",
        "scopeName": "source.openc3-generic",
        "path": "./syntaxes/openc3-generic.tmLanguage.json"
      },
      {
        "language": "openc3-cmd",
        "scopeName": "source.openc3-cmd",
        "path": "./syntaxes/openc3-cmd.tmLanguage.json"
      }
    ],
    "commands": [
      {
        "command": "openc3.showERB",
        "title": "openc3: Compile ERB evaluate and show results",
        "icon": "$(eye)"
      }
    ],
    "menus": {
      "editor/title": [
        {
          "command": "openc3.showERB",
          "group": "navigation@1",
          "when": "resourceExtname == .txt && (resourceFilename == cmd.txt || resourceFilename == tlm.txt || resourceFilename == plugin.txt || resourceFilename == target.txt)"
        }
      ]
    },
    "configuration": {
      "title": "openc3",
      "properties": {
        "openc3.ignoreDirectories": {
          "type": "array",
          "default": [],
          "description": "A list of directory names to ignore",
          "items": {
            "type": "string"
          }
        },
        "openc3.autoGitignore": {
          "type": "boolean",
          "default": true,
          "description": "Automatically add generated .pyi stub files to gitignore"
        },
        "openc3.autoEditorHide": {
          "type": "boolean",
          "default": true,
          "description": "Configure vscode to automatically hide generated .pyi stub files"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@types/vscode": "^1.104.0",
    "@typescript-eslint/eslint-plugin": "^8.42.0",
    "@typescript-eslint/parser": "^8.42.0",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2",
    "esbuild": "^0.25.9",
    "eslint": "^9.34.0",
    "fs-extra": "^11.3.2",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.6.2",
    "typescript": "^5.9.2"
  },
  "dependencies": {
    "erb": "^1.3.3"
  }
}
